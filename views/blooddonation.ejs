            <input type="text" class="form-control" placeholder="Address Line 1"  id="AddressLine1BloodDonation" name="AddressLine1BloodDonation"  required/>
            <br />
            <span>
              <input type="text" class="form-control" placeholder="Address Line 2" id="AddressLine2BloodDonation" name="AddressLine2BloodDonation"   required>
