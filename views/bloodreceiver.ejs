  <script type="text/javascript">
    function VerifyUploadSizeIsOK(input)
    {
       /* Attached file size check. Will Bontrager Software LLC, https://www.willmaster.com */       
       var MaxSizeInBytes = 2097152;
       var fld = document.getElementById("BloodRequestSlipBloodReception");
       if( fld.files && fld.files.length == 1 && fld.files[0].size > MaxSizeInBytes )
       {
         input.setCustomValidity("The file size must be no more than " + parseInt(MaxSizeInBytes/1024/1024) + "MB");
          
       }
       else{
         input.setCustomValidity("");
       }
    } // function VerifyUploadSizeIsOK()
    </script>
    

